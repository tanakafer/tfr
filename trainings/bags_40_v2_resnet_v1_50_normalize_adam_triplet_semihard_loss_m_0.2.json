{
  "dataset": "bags_40_v2",
  "loading_threads": 8,
  "checkpoint_frequency": 100,
  "model": {
    "name": "resnet_v1_50",
    "head": "direct_normalize",
    "embedding_dim": 128,
    "input": {
      "height": 224,
      "width": 224
    },
    "crop": {
      "height": 256,
      "width": 256
    },
    "batch": {
      "P": 20,
      "K": 2
    },
    "fit": {
      "loss": "semi_hard_triplet",
      "metric": "euclidean",
      "margin": 0.2,
      "optimizer": "adam",
      "epochs": 2000,
      "lr": 0.0003,
      "decay_start_iteration": -1
    }
  }
}
